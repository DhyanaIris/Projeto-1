<!DOCTYPE html>
<html lang="pt-BR">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" type="text/css" href="../styles/global.css">
  <link rel="stylesheet" type="text/css" href="../styles/home.css">
  <script src="../app.js" defer></script>
  <title>Projeto 1</title>
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
</head>

<body>
  <header>
    <section class="headerContainer">
      <section class="logo">
        <img src="" alt="">
        <h1>KPOP</h1>
        <h1 id="event">EVENT</h1>
      </section>
      <section class="navContainer">
        <nav>
          <ul>
            <a href="/">
              <li>
                Home
              </li>
            </a>
            <% if (!user) { %>
              <!-- Mostrar apenas quando o usuário NÃO estiver logado -->
              <a href="/login">
                <li>
                  Login
                </li>
              </a>
            <% } else { %>
              <!-- Mostrar apenas quando o usuário estiver logado -->
              <a href="/admin">
                <li>
                  Admin
                </li>
              </a>
              <a href="/login/logout">
                <li>
                  Logout
                </li>
              </a>
            <% } %>
          </ul>
        </nav>        
      </section>
    </section>
  </header>
  <main>
    <section class="mainContainer">
      <article class="title">
        <h1>Kpop Events</h1>
      </article>
      <section class="searchContainer">
        <form action="/searchResults" method="get">
          <input type="text" class="searchBar" name="keywords" placeholder="Pesquisar">
          <button type="submit" class="searchBtn">
            <img src="../img/lupa.svg" alt="Lupa">
          </button>
        </form>
        <!-- <input type="text" class="searchBar" id="searchInput" placeholder="Pesquisar">
        <a href="#" class="searchBtn" id="searchButton">
          <img src="../img/lupa.svg" alt="Lupa">
        </a> -->
      </section>
      <section class="container">
        <article class="subTitle">
          <h2>Publicações em Destaque</h2>
        </article>
        <section class="groupContainer">
            <% featuredArticles.forEach(article => { %>
              <% if (article.kb_featured) { %>
            <section class="newsContainer">
              <section class="imgContainer">
                <img src="../img/bg.jpg" alt="" class="">
              </section>
              <a href="/article/<%= article.kb_id %>">
                <article class="infoContainer">
                  <h3><%= article.kb_title %></h3>
                  <p><%= article.kb_summary %></p>
                </article>
              </a>
            </section>
              <% }; %>
            <% }); %>
          <section class="newsContainer">
            <section class="imgContainer">
              <img src="../img/bg.jpg" alt="" class="">
            </section>
            <a href="#" target="_blank">
              <article class="infoContainer">
                <h3>TWICE READY TO BE TOUR BRAZIL</h3>
                <p>Anunciado show do girl group Twice no Allianz Parque</p>
              </article>
            </a>
          </section>
        </section>
      </section>
      <section class="container">
        <article class="subTitle">
          <h2>Publicações Mais Curtidas</h2>
        </article>
        <section class="groupContainer">
          <% likedArticles.forEach(article => { %>
          <section class="newsContainer">
            <section class="imgContainer">
              <img src="../img/bg.jpg" alt="" class="">
            </section>
            <a href="/article/<%= article.kb_id %>">
              <article class="infoContainer">
                <h3><%= article.kb_title %></h3>
                <p><%= article.kb_summary %></p>
              </article>
            </a>
          </section>
          <% }); %>
        </section>
      </section>
    </section>
  </main>
  <footer>
    <section class="midiaContainer">
      <a href="#" target="_blank">
        p
        <img src="" alt="">
      </a>
      <a href="#" target="_blank">
        p
        <img src="" alt="">
      </a>
      <a href="#" target="_blank">
        p
        <img src="" alt="">
      </a>
    </section>
    <p>Todos os direitos reservados 2023</p>
  </footer>
</body>

</html>